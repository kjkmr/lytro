html
	font-family Univers, 'Univers LT Std', Helvetica, Arial, YuGothic, 'Yu Gothic Medium', 'Hiragino Kaku Gothic ProN', sans-serif
	font-weight 300
	color #333

#loading {
	display none
}

body.loading #loading {
	text-align center
	display block
	padding 10px
	font-size 12px
	opacity 1
	animation blink 0.3s linear infinite
}

@keyframes blink {
	0% {
		opacity 0
	}
	50% {
		opacity 1
	}
	100% {
		opacity 0
	}
}



//PC
@media screen and (min-width 800px)
	body
		margin 0px
	#container
		width 100vw;
		padding-top: 80px;
		display flex;
		.loading &
			display none
		#lytro, #real
			width: 50vw;
			h2
				width: 50vw;
				font-size 15px
				text-align center
				padding 10px
			canvas
				width: 50vw;
				height: 50vw;

